            android:focusable="true"
            android:focusableInTouchMode="true"/>
      -->
    <Button
            android:id="@+id/answer_1"
            android:text="A"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"

        android:shadowRadius="5"
        android:layout_above="@+id/answer_2"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/answer_2"
        android:text="B"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_above="@+id/answer_3"
        android:layout_alignStart="@+id/answer_1" />
    <Button
        android:id="@+id/answer_3"
        android:text="C"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_above="@+id/check_button"
        android:layout_alignStart="@+id/answer_2"
        android:layout_marginBottom="32dp" />
    <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Check"
            android:onClick="check"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:id="@+id/check_button"/>

    <Button
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Next gif"
           android:onClick="request"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginBottom="@dimen/activity_horizontal_margin"
           android:id="@+id/movie_button"/>

       <Button
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Show the Title"
           android:onClick="showName"
           android:id="@+id/prev"
           android:layout_alignTop="@+id/check_button"
           android:layout_alignParentStart="true" />

   </RelativeLayout>