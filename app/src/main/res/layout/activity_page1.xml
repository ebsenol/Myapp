<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:id="@+id/lay"
    tools:context=".pages.Page1">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer_1"
        android:layout_alignEnd="@+id/progress"
        android:layout_alignStart="@+id/progress"
        android:layout_alignParentTop="true" />
    <!--   <ProgressBar android:id="@+id/loading_spinner"
         style="?android:progressBarStyleLarge"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:pivotX="50%"
         android:pivotY="50%"
         android:layout_gravity="center"
         android:scaleType="fitCenter"/>
 -->
    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:id="@+id/progress"
        android:indeterminate="true"

        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/answer_1"
        android:layout_alignStart="@+id/answer_1"
        android:layout_below="@+id/first_text" />

    <TextView
        android:id="@+id/first_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Press on any button to start!"
        android:textStyle="bold"
        android:scaleType="fitCenter"
        android:textSize="30sp"
        android:layout_alignParentStart="true" />
    <!--
      <EditText
           android:id="@+id/first_number"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="@string/number_hint"
           android:textColor="#FFFFFF"
           android:layout_marginTop="5dip"
           android:cursorVisible="true"
           android:ems="10"
           android:scaleType="fitCenter"
           android:layout_gravity="center_vertical"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="@dimen/activity_horizontal_margin"
           android:layout_centerHorizontal="true"
           android:focusable="true"
           android:focusableInTouchMode="true"/>
     -->
    <Button
        android:id="@+id/answer_1"
        android:onClick="check"
        android:text="A"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:alpha="0.65"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@+id/answer_2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/answer_2"
        android:onClick="check"
        android:text="B"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:alpha="0.65"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_above="@+id/answer_3"
        android:layout_alignStart="@+id/answer_1"
        android:layout_alignEnd="@+id/answer_1" />

    <Button
        android:id="@+id/answer_3"
        android:onClick="check"
        android:text="C"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:alpha="0.65"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_alignEnd="@+id/answer_2"
        android:layout_alignStart="@+id/answer_2" />

    <!--
    <Button
