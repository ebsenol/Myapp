<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    tools:context=".activities.QuizActivity"
    android:orientation="vertical">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ab_counterButton"
        android:textColor="#FFFFFFFF"
        android:textSize="40sp"
        android:alpha="0.85"
        android:background="@drawable/btn_true_counter"
        android:shadowColor="#ff1b0f0f"
        android:layout_alignTop="@+id/ab_heart_button"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ab_homeButton"
        android:onClick="goHome"
        android:background="@drawable/home"
        android:layout_alignTop="@+id/ab_counterButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp" />

    <com.like.LikeButton
        app:icon_type="heart"
        app:icon_size="40dp"
        android:id="@+id/ab_heart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:anim_scale_factor="1.6"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>