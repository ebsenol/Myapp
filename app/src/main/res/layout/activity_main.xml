<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giffit"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:id="@+id/welcomeText"
        android:textSize="40sp"
        android:textAllCaps="false"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy"
        android:textAllCaps="false"
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:drawableLeft="@drawable/baby"
        android:onClick="easyMode"
        android:fontFamily="sans-serif"
        android:textSize="35dp"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hard"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:onClick="goToPage1"
        android:drawableLeft="@drawable/zombie"
        android:textAllCaps="false"

        android:id="@+id/button1"
        android:textSize="35dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/welcomeText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:onClick="explore"
        android:id="@+id/explore"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        android:drawableLeft="@drawable/likes"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/welcomeText"
        android:layout_marginTop="101dp" />

    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/boom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:boom_inActionBar="false"
        app:boom_button_color="@android:color/holo_orange_light"
        app:boom_button_pressed_color="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/explore"
        android:layout_toStartOf="@+id/welcomeText" />

</RelativeLayout>