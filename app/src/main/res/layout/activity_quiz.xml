<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#313131"
    android:id="@+id/lay"
    tools:context=".activities.QuizActivity">

    <ImageView
        android:id="@+id/imageViewGif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"

        android:layout_above="@+id/answer_1"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:id="@+id/progress"
        android:indeterminate="true"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/answer_1"
        android:layout_alignStart="@+id/answer_1"
        android:layout_below="@+id/first_text" />

    <TextView
        android:id="@+id/first_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Loading..."
        android:textStyle="bold"
        android:scaleType="fitCenter"
        android:textSize="30sp"
        android:layout_alignTop="@+id/imageViewGif"
        android:layout_alignEnd="@+id/progress" />

    <Button
        android:id="@+id/answer_1"
        android:onClick="check"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:alpha="0.65"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@+id/answer_2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/answer_2"
        android:onClick="check"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:alpha="0.65"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_above="@+id/answer_3"
        android:layout_alignStart="@+id/answer_1"
        android:layout_alignEnd="@+id/answer_1" />

    <Button
        android:id="@+id/answer_3"
        android:onClick="check"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:alpha="0.65"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignStart="@+id/answer_2"
        android:layout_alignEnd="@+id/answer_2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/resultText"
        android:layout_alignBottom="@+id/answer_1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/background_floating_material_light"
        android:textStyle="bold"
        android:textSize="70dp"
        android:layout_marginTop="100dp"
        android:alpha="0.8"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        style="@style/MyTheme"
        android:elevation="4dp"
        android:background="@color/colorPrimary">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_marginRight="100dp"
            android:onClick="goHome"
            android:layout_centerHorizontal="true"
            android:background="@drawable/home"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/counterButton"
            android:textColor="#FFFFFFFF"
            android:layout_marginRight="100dp"
            android:textSize="40sp"
            android:alpha="0.85"
            android:background="@drawable/btn_true_counter"
            android:shadowColor="#ff1b0f0f"
           />


        <com.like.LikeButton
            app:icon_type="heart"
            app:icon_size="37dp"
            android:id="@+id/heart_button"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:anim_scale_factor="1.6" />

    </android.support.v7.widget.Toolbar>
</RelativeLayout>